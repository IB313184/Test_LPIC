
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="false" >

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:text="Test preparacion para la certificacion"
        android:textSize="19dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/lpic1"
        android:id="@+id/textView2"
        android:textSize="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <TextView
            android:id="@+id/tituloJuego"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    <TextView
            android:id="@+id/preguntaActual"
            android:layout_width="320dp"
            android:layout_height="170dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tituloJuego"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:onClick="siguientePregunta"
            android:width="80dp" />

    <Button
        android:id="@+id/siguiente"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="180dp"
        android:text="@string/botonJuego"
        android:layout_below="@+id/radioGroup1"
        android:layout_toRightOf="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="New Button"
        android:id="@+id/button"
        android:width="180dp"
        android:layout_below="@+id/radioGroup1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView3"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/preguntaActual"
                android:layout_marginTop="10dp"
                android:layout_gravity="right" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView4"
                android:layout_alignParentBottom="true" android:layout_toLeftOf="@+id/textView5"
                android:layout_marginTop="5dp"
                android:layout_gravity="right" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView5" android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/textView"
                android:layout_marginTop="5dp"
                android:layout_gravity="right" />

        <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opcion1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opcion2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opcion3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opcion4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp" />

     </RadioGroup>

    <com.google.android.gms.ads.AdView

        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5901787361565688/7304730654"
        android:gravity="center" />


</RelativeLayout>