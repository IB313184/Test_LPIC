        android:layout_toRightOf="@+id/textView3" />

<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:id="@+id/button"
        android:layout_below="@+id/play"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/puntuaciones"
        android:onClick="button2print"/>

<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu"
        android:layout_below="@+id/play"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/play"
        android:onClick="button3print"
        android:id="@+id/button2" />
<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lpic1"
            android:id="@+id/button3"
            android:layout_above="@+id/button5" android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/button4"
            android:onClick="llpic1print" />
<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lpic2"
            android:id="@+id/button4"
            android:layout_above="@+id/button5" android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/textView3"
            android:onClick="llpic2print" />
<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lpic3"
            android:id="@+id/button5"
            android:layout_above="@+id/play" android:layout_alignRight="@+id/puntuaciones"
